<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/button_ripple_effect_color</item>
    </style>

    <!-- Base Styling for Displays -->
    <style name="DisplayStyle" parent="@android:style/Widget.Material.Light.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:editable">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Base Styling for Numerical Buttons -->
    <style name="NumericButtonStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/light_button_text_color</item>
        <item name="android:textSize">30dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Base Styling for Operator Buttons -->
    <style name="OperatorButtonStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/light_button_text_color</item>
        <item name="android:textSize">30dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
