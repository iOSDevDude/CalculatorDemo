<?xml version="1.0" encoding="utf-8"?>

<!-- Layout setup -->
<benosowiecki.com.calculatordemo.CalculatorButtonAreaLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_area_numeric"
    app:numRows="4"
    app:numCols="3"
    android:background="@color/button_area_numeric_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <!-- Add all the buttons required -->
    <Button
        android:id="@+id/button_7"
        android:onClick="onButtonClick"
        android:text="7"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_8"
        android:onClick="onButtonClick"
        android:text="8"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_9"
        android:onClick="onButtonClick"
        android:text="9"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_4"
        android:onClick="onButtonClick"
        android:text="4"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_5"
        android:onClick="onButtonClick"
        android:text="5"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_6"
        android:onClick="onButtonClick"
        android:text="6"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_1"
        android:onClick="onButtonClick"
        android:text="1"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_2"
        android:onClick="onButtonClick"
        android:text="2"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_3"
        android:onClick="onButtonClick"
        android:text="3"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_decimal"
        android:onClick="onButtonClick"
        android:text="."
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_0"
        android:onClick="onButtonClick"
        android:text="0"
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_equals"
        android:onClick="onButtonClick"
        android:text="="
        style="@style/NumericButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</benosowiecki.com.calculatordemo.CalculatorButtonAreaLayout>